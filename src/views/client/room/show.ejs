<%- include('../layout/header'); -%>

<div class="container-fluid page-header mb-5 p-0" style="background-image: url(/client/img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Phòng Nghỉ</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Phòng</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <form action="/rooms" method="GET"> <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-3">
                                <div class="date" id="date1" data-target-input="nearest">
                                    <input type="text" name="checkIn" class="form-control datetimepicker-input" 
                                        placeholder="Ngày Nhận Phòng" data-target="#date1" data-toggle="datetimepicker" 
                                        value="<%= searchParams.checkIn || '' %>" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="date" id="date2" data-target-input="nearest">
                                    <input type="text" name="checkOut" class="form-control datetimepicker-input" 
                                        placeholder="Ngày Trả Phòng" data-target="#date2" data-toggle="datetimepicker" 
                                        value="<%= searchParams.checkOut || '' %>" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" name="type">
                                    <option value="" <%= !searchParams.type ? 'selected' : '' %>>Tất cả loại phòng</option>
                                    <option value="Single" <%= searchParams.type === 'Single' ? 'selected' : '' %>>Single</option>
                                    <option value="Double" <%= searchParams.type === 'Double' ? 'selected' : '' %>>Double</option>
                                    <option value="Suite" <%= searchParams.type === 'Suite' ? 'selected' : '' %>>Suite</option>
                                    <option value="Deluxe" <%= searchParams.type === 'Deluxe' ? 'selected' : '' %>>Deluxe</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" name="capacity">
                                    <option value="" <%= !searchParams.capacity ? 'selected' : '' %>>Số người</option>
                                    <option value="1" <%= searchParams.capacity === '1' ? 'selected' : '' %>>1 người</option>
                                    <option value="2" <%= searchParams.capacity === '2' ? 'selected' : '' %>>2 người</option>
                                    <option value="3" <%= searchParams.capacity === '3' ? 'selected' : '' %>>3+ người</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary w-100" type="submit">Tìm Kiếm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Phòng Của Chúng Tôi</h6>
            <h1 class="mb-5">Khám Phá <span class="text-primary text-uppercase">Các Loại Phòng</span></h1>
        </div>

        <div class="row g-4">
            <% if (rooms && rooms.length > 0) { %>
                <% rooms.forEach(function(room) { %>
                    <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="room-item shadow rounded overflow-hidden h-100">
                            <div class="position-relative">
                                <img class="img-fluid w-100" 
                                     src="<%= room.image ? '/images/product/' + room.image : '/client/img/room-1.jpg' %>" 
                                     alt="<%= room.name %>" 
                                     style="height: 250px; object-fit: cover;">
                                <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">
                                    <%= room.price.toLocaleString('vi-VN') %>đ/Đêm
                                </small>
                            </div>
                            <div class="p-4 mt-2">
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0 text-truncate"><%= room.name %></h5>
                                    <div class="ps-2">
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                    </div>
                                </div>
                                <div class="d-flex mb-3">
                                    <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i><%= room.type %></small>
                                    <small class="border-end me-3 pe-3"><i class="fa fa-user text-primary me-2"></i><%= room.capacity %> Người</small>
                                    <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                                </div>
                                <p class="text-body mb-3 text-truncate-3" style="min-height: 50px;">
                                    <%= room.description || 'Mô tả phòng đang được cập nhật.' %>
                                </p>
                                <div class="d-flex justify-content-between" style="gap: 10px;">
                                    <a class="btn btn-sm btn-primary rounded py-2 px-4" href="/room/detail/<%= room.id %>">Xem Chi Tiết</a>
                                    <a class="btn btn-sm btn-dark rounded py-2 px-4" href="/booking?roomId=<%= room.id %>">Đặt Ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <div class="alert alert-warning">
                        <h4><i class="fas fa-search me-2"></i>Không tìm thấy phòng nào phù hợp.</h4>
                        <p>Vui lòng thử lại với tiêu chí tìm kiếm khác.</p>
                        <a href="/rooms" class="btn btn-outline-warning mt-2">Xem tất cả phòng</a>
                    </div>
                </div>
            <% } %>
        </div>

        <% if (pagination && pagination.totalPages > 1) { %>
            <div class="row mt-5">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="<%= getPageLink(pagination.currentPage - 1) %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                                <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="<%= getPageLink(i) %>"><%= i %></a>
                                </li>
                            <% } %>

                            <li class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="<%= getPageLink(pagination.currentPage + 1) %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        <% } %>
        
    </div>
</div>
<%
  function getPageLink(page) {
      // Chuyển object searchParams thành URLSearchParams string
      // Cách đơn giản trong EJS: Tự xây dựng chuỗi
      let queryString = `page=${page}`;
      if (searchParams.type) queryString += `&type=${searchParams.type}`;
      if (searchParams.capacity) queryString += `&capacity=${searchParams.capacity}`;
      if (searchParams.checkIn) queryString += `&checkIn=${searchParams.checkIn}`;
      if (searchParams.checkOut) queryString += `&checkOut=${searchParams.checkOut}`;
      return `?${queryString}`;
  }
%>
<div style="margin-bottom: 200px;"></div>
<%- include('../layout/footer'); -%>