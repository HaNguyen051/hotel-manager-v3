<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Chi tiết Payment #<%= payment ? payment.id : 'N/A' %> - Hotel Manager</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>

    <div id="layoutSidenav">
        <%- include('../layout/sidenav'); -%>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Chi tiết Thanh toán #<%= payment ? payment.id : 'N/A' %></h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/payment">Thanh toán</a></li>
                        <li class="breadcrumb-item active">Chi tiết</li>
                    </ol>

                    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%- success_msg[0] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                    
                    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%- error_msg[0] %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                    
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <% if (payment) { %>
                        <div class="row">
                            <div class="col-lg-7">
                                <div class="card mb-4 shadow-sm">
                                    <div class="card-header">
                                        <h5 class="my-1"><i class="fas fa-credit-card me-2"></i>Thông tin Thanh toán</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-3">
                                            <div class="col-sm-6">
                                                <strong>ID Payment:</strong> #<%= payment.id %>
                                            </div>
                                            <div class="col-sm-6">
                                                <strong>Ngày tạo:</strong> <%= new Date(payment.createdAt).toLocaleString('vi-VN') %>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-sm-6">
                                                <strong>Trạng thái:</strong>
                                                <%
                                                    let statusBadgeClass = 'bg-secondary';
                                                    let statusText = payment.paymentStatus;
                                                    if (payment.paymentStatus === 'PENDING') {
                                                        statusBadgeClass = 'bg-warning text-dark';
                                                        statusText = 'Chờ thanh toán';
                                                    } else if (payment.paymentStatus === 'SUCCESS') {
                                                        statusBadgeClass = 'bg-success';
                                                        statusText = 'Đã thanh toán';
                                                    } else if (payment.paymentStatus === 'FAILED') {
                                                        statusBadgeClass = 'bg-danger';
                                                        statusText = 'Thất bại';
                                                    } else if (payment.paymentStatus === 'REFUNDED') {
                                                        statusBadgeClass = 'bg-secondary';
                                                        statusText = 'Đã hoàn tiền';
                                                    }
                                                %>
                                                <span class="badge <%= statusBadgeClass %> ms-1"><%= statusText %></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <strong>Tổng tiền:</strong>
                                                <span class="text-danger fw-bold ms-1">
                                                    <%= payment.totalAmount.toLocaleString('vi-VN') %>đ
                                                </span>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-sm-6">
                                                <strong>Phương thức:</strong>
                                                <%
                                                    let methodBadgeClass = 'bg-secondary';
                                                    let methodText = payment.paymentMethod;
                                                    if (payment.paymentMethod === 'CASH') {
                                                        methodBadgeClass = 'bg-success';
                                                        methodText = 'Tiền mặt';
                                                    } else if (payment.paymentMethod === 'CARD') {
                                                        methodBadgeClass = 'bg-primary';
                                                        methodText = 'Thẻ';
                                                    } else if (payment.paymentMethod === 'BANK_TRANSFER') {
                                                        methodBadgeClass = 'bg-info text-dark';
                                                        methodText = 'Chuyển khoản';
                                                    } else if (payment.paymentMethod === 'MOBILE_PAYMENT') {
                                                        methodBadgeClass = 'bg-warning text-dark';
                                                        methodText = 'Ví điện tử';
                                                    }
                                                %>
                                                <span class="badge <%= methodBadgeClass %> ms-1"><%= methodText %></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <strong>Ngày thanh toán:</strong>
                                                <%= payment.paidAt ? new Date(payment.paidAt).toLocaleString('vi-VN') : 'Chưa thanh toán' %>
                                            </div>
                                        </div>

                                        <% if (payment.paymentRef) { %>
                                        <div class="row">
                                            <div class="col-12">
                                                <strong>Ghi chú/Mã tham chiếu:</strong>
                                                <p class="mb-0 mt-1 text-muted"><%= payment.paymentRef %></p>
                                            </div>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>

                                <% if (payment.booking) { %>
                                <div class="card mb-4 shadow-sm">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="my-1"><i class="fas fa-calendar-alt me-2"></i>Thông tin Booking</h5>
                                        <a href="/admin/booking/detail/<%= payment.bookingId %>" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-external-link-alt me-1"></i>Xem chi tiết Booking
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-sm-6">
                                                <strong>Booking ID:</strong> #<%= payment.booking.id %>
                                            </div>
                                            <div class="col-sm-6">
                                                <strong>Trạng thái:</strong> <%= payment.booking.status %>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-6">
                                                <strong>Khách:</strong> <%= payment.booking.guestName %>
                                            </div>
                                            <div class="col-sm-6">
                                                <strong>SĐT:</strong> <%= payment.booking.guestPhone %>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-6">
                                                <strong>Check-in:</strong> <%= new Date(payment.booking.checkInDate).toLocaleDateString('vi-VN') %>
                                            </div>
                                            <div class="col-sm-6">
                                                <strong>Check-out:</strong> <%= new Date(payment.booking.checkOutDate).toLocaleDateString('vi-VN') %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="alert alert-warning">Thông tin booking liên quan không tìm thấy (có thể đã bị xóa).</div>
                                <% } %>
                            </div>

                            <div class="col-lg-5">
                                <% if (payment.booking && payment.booking.roomBookings && payment.booking.roomBookings[0] && payment.booking.roomBookings[0].room) { %>
                                    <% const rb = payment.booking.roomBookings[0]; %>
                                    <div class="card mb-4 shadow-sm">
                                        <div class="card-header">
                                            <h5 class="my-1"><i class="fas fa-bed me-2"></i>Thông tin Phòng</h5>
                                        </div>
                                        <div class="card-body">
                                            <% if (rb.room.image) { %>
                                                <img src="/images/product/<%= rb.room.image %>" 
                                                     alt="<%= rb.room.name %>" 
                                                     class="img-fluid rounded mb-2" 
                                                     style="max-height: 180px; width: 100%; object-fit: cover;" />
                                            <% } %>
                                            <p class="mb-1"><strong>Phòng:</strong> <%= rb.room.name %></p>
                                            <p class="mb-1"><strong>Loại:</strong> <%= rb.room.type %></p>
                                            <p class="mb-1"><strong>Giá/đêm:</strong> <%= rb.price ? rb.price.toLocaleString('vi-VN') + 'đ' : 'N/A' %></p>
                                            <p class="mb-1"><strong>Số đêm:</strong> <%= rb.quantity || 'N/A' %></p>
                                            <p class="mb-0"><strong>Sức chứa:</strong> <%= rb.room.capacity || 'N/A' %> người</p>
                                        </div>
                                    </div>
                                <% } %>

                                <div class="card mb-4 shadow-sm border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="my-1"><i class="fas fa-tasks me-2"></i>Thao tác</h5>
                                    </div>
                                    <div class="card-body">
                                        <% if (payment.paymentStatus === 'PENDING') { %>
                                            <form action="/admin/confirm-payment/<%= payment.id %>" method="POST" class="mb-3">
                                                <div class="mb-2">
                                                    <label for="paymentMethod" class="form-label fw-bold">Xác nhận Phương thức thanh toán:</label>
                                                    <select name="paymentMethod" id="paymentMethod" class="form-select" required>
                                                        <% if (typeof paymentMethods !== 'undefined') { %>
                                                            <% paymentMethods.forEach(function(method) { %>
                                                                <option value="<%= method %>" <%= payment.paymentMethod === method ? 'selected' : '' %>>
                                                                    <% if (method === 'CASH') { %>Tiền mặt
                                                                    <% } else if (method === 'CARD') { %>Thẻ
                                                                    <% } else if (method === 'BANK_TRANSFER') { %>Chuyển khoản
                                                                    <% } else if (method === 'MOBILE_PAYMENT') { %>Ví điện tử
                                                                    <% } else { %><%= method %><% } %>
                                                                </option>
                                                            <% }); %>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                <div class="mb-2">
                                                    <label for="paymentRef" class="form-label">Mã tham chiếu (nếu có):</label>
                                                    <input type="text" name="paymentRef" id="paymentRef" class="form-control" 
                                                           placeholder="VD: MGD123456789">
                                                </div>
                                                <button type="submit" class="btn btn-success w-100">
                                                    <i class="fas fa-check-circle me-1"></i> Xác nhận thanh toán
                                                </button>
                                            </form>
                                            <hr>
                                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                                <i class="fas fa-times-circle me-1"></i> Hủy thanh toán (Failed)
                                            </button>

                                        <% } else if (payment.paymentStatus === 'SUCCESS') { %>
                                            <button type="button" class="btn btn-warning w-100 text-dark" data-bs-toggle="modal" data-bs-target="#refundModal">
                                                <i class="fas fa-undo me-1"></i> Hoàn tiền
                                            </button>

                                        <% } else { %>
                                            <div class="alert alert-info mb-0">
                                                <i class="fas fa-info-circle me-2"></i>
                                                Không có thao tác nào khả dụng cho trạng thái <%= payment.paymentStatus %>.
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a href="/admin/payment" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                        </div>

                        <!-- Modal hủy thanh toán -->
                        <div class="modal fade" id="cancelModal" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Hủy thanh toán</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                    </div>
                                    <form action="/admin/cancel-payment/<%= payment.id %>" method="POST">
                                        <div class="modal-body">
                                            <p>Xác nhận hủy thanh toán #<%= payment.id %>?</p>
                                            <p class="text-danger small">
                                                <i class="fas fa-exclamation-triangle me-1"></i>
                                                Hành động này sẽ tự động hủy booking liên quan (chuyển sang CANCELLED) và giải phóng phòng (nếu có thể).
                                            </p>
                                            <div class="mb-3">
                                                <label for="cancelReason" class="form-label">Lý do (tùy chọn):</label>
                                                <textarea name="reason" id="cancelReason" class="form-control" rows="2" 
                                                          placeholder="Nhập lý do hủy..."></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-danger">Xác nhận hủy (Failed)</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Modal hoàn tiền -->
                        <div class="modal fade" id="refundModal" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-warning text-dark">
                                        <h5 class="modal-title">Hoàn tiền</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <form action="/admin/refund-payment/<%= payment.id %>" method="POST">
                                        <div class="modal-body">
                                            <p>Xác nhận hoàn tiền cho payment #<%= payment.id %>?</p>
                                            <p class="text-danger small">
                                                <i class="fas fa-exclamation-triangle me-1"></i>
                                                Hành động này sẽ tự động hủy booking (nếu chưa hủy) và giải phóng phòng.
                                            </p>
                                            <div class="mb-3">
                                                <label for="refundAmount" class="form-label">Số tiền hoàn (Để trống = hoàn toàn bộ):</label>
                                                <input type="number" name="refundAmount" id="refundAmount" 
                                                       class="form-control" 
                                                       placeholder="<%= payment.totalAmount.toLocaleString('vi-VN') %>đ"
                                                       max="<%= payment.totalAmount %>"
                                                       min="0">
                                            </div>
                                            <div class="mb-3">
                                                <label for="refundReason" class="form-label">Lý do hoàn tiền: <span class="text-danger">*</span></label>
                                                <textarea name="refundReason" id="refundReason" class="form-control" rows="3" 
                                                          placeholder="Nhập lý do hoàn tiền..." required></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-warning text-dark">Xác nhận hoàn tiền</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    <% } else { %>
                        <div class="alert alert-warning">Không tìm thấy thông tin payment.</div>
                        <a href="/admin/payment" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Quay lại danh sách</a>
                    <% } %>

                </div>
            </main>
            <%- include('../layout/footer'); -%>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/js/scripts.js"></script>
</body>
</html>