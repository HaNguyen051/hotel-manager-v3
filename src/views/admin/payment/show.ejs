<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Manage Payments - Hotel Manager</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body class="sb-nav-fixed">
    <%- include('../layout/header'); -%>

    <div id="layoutSidenav">
      <%- include('../layout/sidenav'); -%>
      <div id="layoutSidenav_content">
        <main>
          <div class="container-fluid px-4">
            <h1 class="mt-4">Quản lý Thanh toán</h1>
            <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active">Thanh toán</li>
            </ol>

            <!-- Messages -->
            <% if (messages && messages.length > 0) { %> <%
            messages.forEach(function(msg) { %>
            <div
              class="alert alert-info alert-dismissible fade show"
              role="alert"
            >
              <%= msg %>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
              ></button>
            </div>
            <% }); %> <% } %> <% if (error) { %>
            <div
              class="alert alert-danger alert-dismissible fade show"
              role="alert"
            >
              <%= error %>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
              ></button>
            </div>
            <% } %>

            <!-- Payments Table -->
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-credit-card me-1"></i>
                Danh sách thanh toán
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover table-bordered">
                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Booking ID</th>
                        <th>Khách hàng</th>
                        <th>Số tiền</th>
                        <th>Phương thức</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (payments && payments.length > 0) { %> <%
                      payments.forEach(function(payment) { %>
                      <tr>
                        <td>#<%= payment.id %></td>
                        <td>
                          <a
                            href="/admin/view-booking/<%= payment.booking.id %>"
                            class="link-primary"
                          >
                            #<%= payment.booking.id %>
                          </a>
                        </td>
                        <td>
                          <%= payment.booking.user.fullName %><br />
                          <small class="text-muted"
                            ><%= payment.booking.user.phone %></small
                          >
                        </td>
                        <td>
                          <strong
                            ><%= payment.totalAmount.toLocaleString('vi-VN')
                            %>đ</strong
                          >
                        </td>
                        <td>
                          <% if (payment.paymentMethod === 'CASH') { %>
                          <span class="badge bg-secondary">Tiền mặt</span>
                          <% } else if (payment.paymentMethod === 'CARD') { %>
                          <span class="badge bg-primary">Thẻ</span>
                          <% } else if (payment.paymentMethod ===
                          'BANK_TRANSFER') { %>
                          <span class="badge bg-info">Chuyển khoản</span>
                          <% } else if (payment.paymentMethod ===
                          'MOBILE_PAYMENT') { %>
                          <span class="badge bg-warning">Ví điện tử</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (payment.paymentStatus === 'PENDING') { %>
                          <span class="badge bg-warning">Chờ thanh toán</span>
                          <% } else if (payment.paymentStatus === 'SUCCESS') {
                          %>
                          <span class="badge bg-success">Thành công</span>
                          <% } else if (payment.paymentStatus === 'FAILED') { %>
                          <span class="badge bg-danger">Thất bại</span>
                          <% } else if (payment.paymentStatus === 'REFUNDED') {
                          %>
                          <span class="badge bg-secondary">Đã hoàn</span>
                          <% } %>
                        </td>
                        <td>
                          <%= new
                          Date(payment.createdAt).toLocaleDateString('vi-VN') %>
                        </td>
                        <td>
                          <div class="btn-group" role="group">
                            <a
                              href="/admin/view-payment/<%= payment.id %>"
                              class="btn btn-sm btn-info"
                              title="Xem chi tiết"
                            >
                              <i class="fas fa-eye"></i>
                            </a>
                            <% if (payment.paymentStatus === 'PENDING') { %>
                            <button
                              type="button"
                              class="btn btn-sm btn-success"
                              title="Xác nhận"
                              data-payment-id="<%= payment.id %>"
                              onclick="confirmPayment(this)"
                            >
                              <i class="fas fa-check"></i>
                            </button>
                            <button
                              type="button"
                              class="btn btn-sm btn-danger"
                              title="Hủy"
                              data-payment-id="<%= payment.id %>"
                              onclick="cancelPayment(this)"
                            >
                              <i class="fas fa-times"></i>
                            </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                      <% }); %> <% } else { %>
                      <tr>
                        <td colspan="8" class="text-center">
                          Không có dữ liệu
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </main>
        <%- include('../layout/footer'); -%>
      </div>
    </div>

    <!-- Hidden forms for actions -->
    <form id="confirmForm" action="" method="post" style="display: none"></form>
    <form id="cancelForm" action="" method="post" style="display: none"></form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/admin/js/scripts.js"></script>

    <script>
      function confirmPayment(button) {
        const paymentId = button.getAttribute("data-payment-id");
        if (confirm("Xác nhận thanh toán?")) {
          const form = document.getElementById("confirmForm");
          form.action = "/admin/confirm-payment/" + paymentId;
          form.submit();
        }
      }

      function cancelPayment(button) {
        const paymentId = button.getAttribute("data-payment-id");
        if (confirm("Hủy thanh toán?")) {
          const form = document.getElementById("cancelForm");
          form.action = "/admin/cancel-payment/" + paymentId;
          form.submit();
        }
      }
    </script>
  </body>
</html>
